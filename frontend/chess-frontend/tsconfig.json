{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "src",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/components/chessBoard/chessBoard.jsx",
    "src/app/components/navBar/navBar.jsx"
, "src/app/store/store.ts", "src/app/store/slices/gameModeSlice.ts", "src/app/store/store.js", "src/app/components/loginForm/loginForm.jsx", "src/app/components/backgroundUI/pages.jsx", "src/app/services/adminService.js", "src/app/services/apiClient.js"  ],

  "exclude": [
    "node_modules"
  ]
}
